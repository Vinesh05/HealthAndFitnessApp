<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_background"
    android:layout_marginVertical="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/secondary"
    app:cardCornerRadius="16dp">

    <TextView
        android:id="@+id/txtDateExerciseHistorySingleRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="01/01/2022"
        android:textSize="20sp"
        android:textColor="@color/secondary"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtTimeExerciseHistorySingleRow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtCalBurntExerciseHistorySingleRow"/>

    <TextView
        android:id="@+id/txtCalBurntExerciseHistorySingleRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="12dp"
        android:text="216kcal"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toBottomOf="@id/txtDateExerciseHistorySingleRow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtTimeExerciseHistorySingleRow"/>

    <TextView
        android:id="@+id/txtTimeExerciseHistorySingleRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="20dp"
        android:text="4:16pm"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textAlignment="viewEnd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txtDateExerciseHistorySingleRow" />

</androidx.constraintlayout.widget.ConstraintLayout>